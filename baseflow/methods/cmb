import numpy as np

def cmb(Q, C_Q, C_RO, C_b):
    """
    Calculate the total baseflow using NumPy arrays.
    
    Parameters:
    Q (np.array): Total streamflow
    C_Q (np.array): Conductivity of streamflow
    C_RO (np.array): Conductivity of surface runoff
    C_b (np.array): Conductivity of baseflow
    
    Returns:
    np.array: Total baseflow (b)
    """
    b = Q * (C_Q - C_RO) / (C_b - C_RO)
    return b